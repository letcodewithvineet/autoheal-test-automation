# Server Configuration
PORT=4000

# Database
MONGO_URI=mongodb://mongo:27017/autoheal

# Storage
ARTIFACT_STORAGE=gridfs

# AI Configuration
LLM_PROVIDER=mock
LLM_API_KEY=your_openai_api_key_here

# GitHub Integration (choose one method)
# Method 1: Personal Access Token
GITHUB_TOKEN=your_github_token_here

# Method 2: GitHub App (more secure for production)
GITHUB_APP_ID=your_app_id
GITHUB_INSTALLATION_ID=your_installation_id
GITHUB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# Repository Configuration
REPO_FULL_NAME=your-org/your-repo
DEFAULT_BRANCH=main

# Security
ALLOW_CROSS_ORIGIN=true
MAX_PAYLOAD_MB=50

# Cypress Demo
CYPRESS_AUTOHEAL_API_URL=http://localhost:4000
